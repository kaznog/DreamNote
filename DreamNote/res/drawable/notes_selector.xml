<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 押されているとき -->
    <item android:state_pressed="true" android:drawable="@drawable/abs__list_focused_holo" />
    <!-- チェックされたとき -->
    <item android:state_checked="true" android:drawable="@drawable/abs__list_focused_holo" />
    <!-- トラックボールなどで動かしたときに対象になったときの色(チェックの有無ではない) -->
    <item android:state_selected="true" android:drawable="@drawable/abs__list_focused_holo" />
    <!-- 有効で、フォーカスが当たってるだけのとき -->
    <item android:state_focused="true" android:drawable="@drawable/abs__list_focused_holo" />

    <item android:state_window_focused="false" android:drawable="@android:color/transparent" />
</selector>