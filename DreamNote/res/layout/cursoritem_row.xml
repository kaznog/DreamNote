<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:paddingLeft="0dip"
	android:paddingRight="0dip"
	android:paddingTop="0dip"
	android:paddingBottom="0dip"
>
<com.kaznog.android.dreamnote.view.CheckableLinearLayout
	android:id="@+id/item_rowlayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/notes_selector"
	android:orientation="horizontal"
	android:paddingLeft="0dip"
	android:paddingRight="0dip"
	android:paddingTop="0dip"
	android:paddingBottom="0dip"
>
    <ImageView
		android:id="@+id/item_category_line"
		android:layout_width="8dip"
		android:layout_height="match_parent"
		android:layout_gravity="left"
		android:layout_marginLeft="0dip"
		android:layout_marginRight="0dip"
		android:src="@drawable/category_line_memo"
		android:paddingLeft="0dip"
		android:paddingRight="0dip"
		android:paddingTop="0dip"
		android:paddingBottom="0dip"
	/>
	<ImageView
		android:id="@+id/item_image"
		android:layout_width="96dip"
		android:layout_height="96dip"
		android:layout_marginRight="6dip"
		android:src="@drawable/notebook"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:scaleType="fitXY"
		android:adjustViewBounds="true"
	/>
   	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_gravity="left"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		android:paddingBottom="0dip"
		android:paddingTop="0dip"
	>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:paddingBottom="0dip"
			android:paddingTop="0dip"
		>
	    	<ImageView
				android:id="@+id/item_favicon"
				android:layout_width="16dip"
				android:layout_height="16dip"
				android:layout_marginRight="2dip"
				android:maxHeight="16dip"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:scaleType="fitCenter"
				android:adjustViewBounds="true"
				android:visibility="gone"
			/>
	    	<TextView
				android:id="@+id/item_title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:textColor="#999900"
				android:textSize="16sp"
				android:singleLine="true"
				android:maxLines="1"
				android:lines="1"
				android:ellipsize="end"
				android:layout_marginTop="0dp"
				android:layout_marginBottom="0dp"
				android:paddingBottom="0dip"
				android:paddingTop="0dip"
			/>
		</LinearLayout>
		<TextView
			android:id="@+id/item_desc"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:textColor="#996666"
			android:textSize="14sp"
			android:singleLine="true"
			android:maxLines="1"
			android:lines="1"
			android:ellipsize="end"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:paddingBottom="0dip"
			android:paddingTop="0dip"
		/>
		<TextView
			android:id="@+id/item_date_published"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:textColor="#666666"
			android:textSize="11sp"
			android:singleLine="true"
			android:maxLines="1"
			android:lines="1"
			android:ellipsize="end"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:paddingBottom="0dip"
			android:paddingTop="0dip"
		/>
		<TextView
			android:id="@+id/item_created"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:textColor="#666666"
			android:textSize="11sp"
			android:singleLine="true"
			android:maxLines="1"
			android:lines="1"
			android:ellipsize="end"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:paddingBottom="0dip"
			android:paddingTop="0dip"
		/>
		<LinearLayout
			android:id="@+id/taglayout"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:paddingBottom="0dip"
			android:paddingTop="0dip"
			android:layout_gravity="left|center_vertical"
		>
			<ImageView
				android:id="@+id/tagicon"
				android:layout_width="16dip"
				android:layout_height="16dip"
				android:layout_marginRight="2dip"
				android:maxHeight="16dip"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:scaleType="fitCenter"
				android:adjustViewBounds="true"
				android:src="@drawable/tag"
				android:paddingBottom="1dip"
				android:paddingTop="1dip"
				android:contentDescription="@string/item_tagicon_desc"
			/>
			<TextView
				android:id="@+id/tagtext"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:textColor="#000000"
				android:textSize="12sp"
				android:singleLine="true"
				android:maxLines="1"
				android:lines="1"
				android:ellipsize="end"
				android:layout_marginTop="0dp"
				android:layout_marginBottom="0dp"
				android:paddingBottom="0dip"
				android:paddingTop="0dip"
			/>
		</LinearLayout>
		<ImageView
		    android:id="@+id/item_thumbnail"
		    android:layout_width="fill_parent"
		    android:layout_height="146dip"
			android:layout_gravity="top|center"
			android:scaleType="centerCrop"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:clickable="false"
			android:longClickable="false"
			android:layout_margin="0dip"
			android:padding="0dip"
			android:visibility="gone"
			android:contentDescription="@string/item_thumbnail_desc"
		/>
	</LinearLayout>
</com.kaznog.android.dreamnote.view.CheckableLinearLayout>
</LinearLayout>